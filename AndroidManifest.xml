<?xml version="1.0" encoding="utf-8" ?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.drewdahl.android.todoist" 
	android:versionName="@string/app_version" 
	android:versionCode="1"
	>
    <uses-permission android:name="android.permission.INTERNET" />
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".views.ProjectList"
            android:label="@string/project_title"
            >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <data android:mimeType="vnd.android.cursor.dir/vnd.drewdahl.project" />
            </intent-filter>
        </activity>
        <activity android:name=".views.ProjectEdit"
            android:label="@string/project_title"
            >
            <intent-filter>
                <action android:name="android.intent.action.EDIT" />
                <action android:name="android.intent.action.VIEW" />
                <data android:mimeType="vnd.android.cursor.item/vnd.drewdahl.project" />
            </intent-filter>
        </activity>
    	<activity android:name=".views.ItemList" 
    		android:label="@string/item_title"
    		>
            <intent-filter>
            	<action android:name="android.intent.action.VIEW" />
            	<data android:mimeType="vnd.android.cursor.dir/vnd.drewdahl.item" />
            </intent-filter>
		</activity>
        <activity android:name=".views.ItemEdit"
            android:label="@string/item_title"
            >
            <intent-filter>
                <action android:name="android.intent.action.EDIT" />
                <action android:name="android.intent.action.VIEW" />
                <data android:mimeType="vnd.android.cursor.item/vnd.drewdahl.item" />
            </intent-filter>
        </activity>
		<activity android:name=".views.Login" 
			android:label="@string/login_title" 
			/>
		<activity android:name=".controllers.Launcher"
		    android:label="@string/app_name"
		    >
			<intent-filter>
                 <action android:name="android.intent.action.MAIN" />
                 <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>
		</activity>
		<activity android:name=".preferences.TodoistPreferences"
		    android:label="@string/title_todoist_preferences"
		    >
		    <intent-filter>
		          <action android:name=".preferences.TodoistPreferences" />
		          <category android:name="android.intent.category.PREFERENCE" />
		    </intent-filter>
		</activity>
		<provider android:name=".provider.TodoistProvider"
			android:authorities="com.drewdahl.android.todoist.provider.TodoistProvider"
			/>
	    <service android:name=".service.TodoistService"
	       />
	</application>
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="8"/>
</manifest> 
